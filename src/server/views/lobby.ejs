<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= page_name %>
  </title>

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet" />

  <!-- FastBootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/fastbootstrap@2.2.0/dist/css/fastbootstrap.min.css" rel="stylesheet" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/lobby.css" />
</head>

<body>
  <div class="container">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg mb-4">
      <div class="container-fluid justify-content-between align-items-center">
        <a class="navbar-brand" href="/">Uno Reverse</a>
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a class="avatar d-flex align-items-center justify-content-center" href="#" data-bs-toggle="dropdown"
              aria-expanded="false">
              <span class="avatar-badge border bg-red-300 p-1 text-center m-0 mx-auto">RA</span>
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="#">Settings</a></li>
              <li><a class="dropdown-item" href="#">Notifications</a></li>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Tabs -->
    <ul class="nav nav-tabs nav-justified" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link active" id="fill-tab-0" data-bs-toggle="tab" href="#fill-tabpanel-0" role="tab"
          aria-controls="fill-tabpanel-0" aria-selected="true">Uno Matches</a>
      </li>

      <li class="nav-item" role="presentation">
        <a class="nav-link" id="fill-tab-1" data-bs-toggle="tab" href="#fill-tabpanel-1" role="tab"
          aria-controls="fill-tabpanel-1" aria-selected="false">Create Game</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link" id="fill-tab-2" data-bs-toggle="tab" href="#fill-tabpanel-2" role="tab"
          aria-controls="fill-tabpanel-2" aria-selected="false">Game Rules</a>
      </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content pt-4" id="tab-content">
      <!-- Uno Matches -->
      <div class="tab-pane active" id="fill-tabpanel-0" role="tabpanel" aria-labelledby="fill-tab-0">
        <div class="match-list">
          <% const current_games=games%>

            <% current_games.forEach(game=> { %>
              <div class="match-card">
                <div class="match-avatar"></div>
                <div class="match-info">
                  <h5>
                    <%= game.name %>
                  </h5>
                  <p>
                    <strong>Players:</strong>

                    <strong>Admin:</strong>
                    <%= game.creator_name %>
                  </p>
                </div>
                <form action="/join" method="POST">
                  <input type="hidden" name="gameId" value="<%= game.id %>">
                  <div class="match-action">
                    <button class="btn btn-join">Join</button>
                  </div>
                </form>
              </div>
              <% }) %>
        </div>

        <% if(success_game_creation) {%>
          <p class="text-center m-2">
            <%= success_game_creation %>
          </p>
          <%}%>

            <% if(error_existing_game_message) {%>
              <p class="text-center m-2">
                <%= error_existing_game_message %>
              </p>
              <%}%>

      </div>

      <!-- Create Game -->
      <div class="tab-pane" id="fill-tabpanel-1" role="tabpanel" aria-labelledby="fill-tab-1">
        <h3 class="game-setting-heading">Game Settings</h3>
        <div class="container">
          <form id="form" action="/games/create" method="POST">
            <input type="text" class="form-control" name="gamename" placeholder="Game Name" required />
            <input type="password" class="form-control" name="gamepassword" placeholder="Game Password" />

            <select class="form-select" name="numberofplayers" required>
              <option selected disabled>Max number of players</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
            </select>

            <!-- <div class="mb-3">
              <label class="form-label me-2">Private?</label>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="private" id="yesradio" value="yes" />
                <label class="form-check-label" for="yesradio">Yes</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="private" id="noradio" value="no" />
                <label class="form-check-label" for="noradio">No</label>
              </div>
            </div> -->

            <div class="text-end">
              <button type="submit" class="btn">Create Match</button>
            </div>
          </form>
        </div>
      </div>

      <!-- Game Rules -->
      <div class="tab-pane" id="fill-tabpanel-2" role="tabpanel" aria-labelledby="fill-tab-2">
        <div class="game-rules px-3 pt-3">
          <% const rules=[ "Each player is given 7 cards" , "Random player chosen to go first"
            , "Player must put card based on number or color" , "Draw card if no playable card" , "20 seconds per turn"
            , "Press UNO button when one card left" , "First player to play all their cards wins" ]; const
            colors=['red', 'blue' , 'green' , 'yellow' , 'black' , 'red' , 'blue' ]; const icons=['7', '🎲' , '🔢'
            , '🎴' , '⏱️' , '☝️' , '🏆' ]; %>

            <% rules.forEach((rule, i)=> { %>
              <div class="rule-step mb-3">
                <div class="uno-icon <%= colors[i] %>">
                  <%= icons[i] %>
                </div>
                <div class="rule-text">
                  <%= rule %>
                </div>
              </div>
              <% }) %>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>