<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Uno Reverse</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet"
    crossorigin="anonymous">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/gameroom.css" />
  <link rel="stylesheet" href="/css/profile.css" />
</head>

<body>
  <!-- Audio -->
  <audio autoplay loop>
    <source src="music/ziggy.mp3" type="audio/mpeg">
    Your browser does not support the audio element.
  </audio>

  <!-- Profile Dropdown -->
  <div class="profile-wrapper">
    <div class="profile-icon" onclick="toggleMenu()">RA</div>
    <div id="profile-menu" class="profile-menu">
      <a href="#" class="menu-item">Settings</a>
      <a href="#" class="menu-item logout">Logout</a>
    </div>
  </div>

  <div class="container">
    <div class="inner-div1">
      <!-- Player 1 -->
      <div id="player1">
        <% for (let i = 0; i < 7; i++) { %>
        <div class="card-div">
          <img src="images/Blue_2.jpg" alt="Uno Deck Card" class="uno-card" />
        </div>
        <% } %>
      </div>

      <!-- Discard pile -->
      <div id="discard-pile">
        <img src="images/Blue_2.jpg" class="pile-uno-card" />
        <img src="images/Green_1.jpg" class="pile-uno-card" />
        <img src="images/Yellow_1.jpg" class="pile-uno-card" />
        <img src="images/Yellow_1.jpg" class="pile-uno-card" />
        <img src="images/Yellow_1.jpg" class="pile-uno-card" />
        <img src="images/Yellow_1.jpg" class="pile-uno-card" />
      </div>

      <!-- Player 2 -->
      <div id="player2">
        <% for (let i = 0; i < 7; i++) { %>
        <div class="card-div">
          <img src="images/Green_1.jpg" alt="Uno Deck Card" class="uno-card" />
        </div>
        <% } %>
      </div>
    </div>

    <div class="inner-div2">
      <!-- Player 3 -->
      <div id="player3">
        <% for (let i = 0; i < 7; i++) { %>
        <div class="card-div">
          <img src="images/Yellow_1.jpg" alt="Uno Deck Card" class="player-uno-card" />
        </div>
        <% } %>
      </div>

      <!-- Player 4 -->
      <div id="player4">
        <% for (let i = 0; i < 7; i++) { %>
        <div class="card-div">
          <img src="images/Red_1.jpg" alt="Uno Deck Card" class="player4-uno-card" />
        </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"></script>

  <script>
    function toggleMenu() {
      const menu = document.getElementById('profile-menu');
      menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
    }

    document.addEventListener('click', (e) => {
      const icon = document.querySelector('.profile-icon');
      const menu = document.getElementById('profile-menu');
      if (!icon.contains(e.target) && !menu.contains(e.target)) {
        menu.style.display = 'none';
      }
    });
  </script>
</body>

</html>
