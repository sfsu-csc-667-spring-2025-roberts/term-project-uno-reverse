<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Uno Game Room</title>

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet" />

  <!-- FastBootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/fastbootstrap@2.2.0/dist/css/fastbootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      margin: 0;
      background: radial-gradient(circle, #ff0000 0%, #000000 100%);
      color: white;
      overflow: hidden;
      height: 100vh;
      position: relative;
    }

    .uno-card {
      width: 70px;
      height: auto;
      margin: 2px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .player {
      position: absolute;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .player-row {
      width: 100%;
      flex-direction: row;
    }

    .player-col {
      height: 100%;
      flex-direction: column;
    }

    .player-top {
      top: 10px;
      left: 0;
      transform: rotate(360deg);
    }

    .player-bottom {
      bottom: 10px;
      left: 0;
    }

    .player-left {
      top: 0;
      left: 10px;
      flex-direction: column;
    }

    .player-right {
      top: 0;
      right: 10px;
      flex-direction: column;
      transform: rotate(180deg);
    }

    .left-card,
    .right-card {
      width: 70px;
      height: auto;
      margin: -13px;
      transform-origin: center center;
      position: relative;
      left: 40px;
    }

    .left-card {
      transform: rotate(90deg);
    }

    .right-card {
      transform: rotate(-90deg);
    }

    #discard-pile {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 8px;
    }

    .pile-uno-card {
      width: 60px;
    }

    #uno-form {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, 120%);
    }

    .uno-btn {
      font-weight: bold;
      font-size: 1.2rem;
      padding: 10px 20px;
      background-color: yellow;
      color: black;
      border: none;
      border-radius: 8px;
    }

    .uno-btn:hover {
      background-color: gold;
    }
  </style>
</head>

<body>

  <audio autoplay loop>
    <source src="/music/ziggy.mp3" type="audio/mpeg">
    Your browser does not support the audio element.
  </audio>
  <div class="container">

    <!-- Player 1 (Bottom) -->
    <div class="player player-bottom player-row">
      <img src="/images/cards/Blue_2.jpg" class="uno-card" alt="Card">
      <img src="/images/cards/Blue_2.jpg" class="uno-card" alt="Card">
      <img src="/images/cards/Blue_2.jpg" class="uno-card" alt="Card">
      <img src="/images/cards/Blue_2.jpg" class="uno-card" alt="Card">
      <img src="/images/cards/Blue_2.jpg" class="uno-card" alt="Card">
      <img src="/images/cards/Blue_2.jpg" class="uno-card" alt="Card">
      <img src="/images/cards/Blue_2.jpg" class="uno-card" alt="Card">
    </div>

    <!-- Player 2 (Top) -->
    <div class="player player-top player-row">
      <img src="/images/cards/Green_1.jpg" class="uno-card" alt="Card">
      <img src="/images/cards/Green_1.jpg" class="uno-card" alt="Card">
      <img src="/images/cards/Green_1.jpg" class="uno-card" alt="Card">
      <img src="/images/cards/Green_1.jpg" class="uno-card" alt="Card">
      <img src="/images/cards/Green_1.jpg" class="uno-card" alt="Card">
      <img src="/images/cards/Green_1.jpg" class="uno-card" alt="Card">
      <img src="/images/cards/Green_1.jpg" class="uno-card" alt="Card">
    </div>

    <!-- Player 3 (Left) -->
    <div class="player player-left player-col">
      <img src="/images/cards/Yellow_1.jpg" class="left-card" alt="Card">
      <img src="/images/cards/Yellow_1.jpg" class="left-card" alt="Card">
      <img src="/images/cards/Yellow_1.jpg" class="left-card" alt="Card">
      <img src="/images/cards/Yellow_1.jpg" class="left-card" alt="Card">
      <img src="/images/cards/Yellow_1.jpg" class="left-card" alt="Card">
      <img src="/images/cards/Yellow_1.jpg" class="left-card" alt="Card">
      <img src="/images/cards/Yellow_1.jpg" class="left-card" alt="Card">
    </div>

    <!-- Player 4 (Right) -->
    <div class="player player-right player-col">
      <img src="/images/cards/Red_1.jpg" class="right-card" alt="Card">
      <img src="/images/cards/Red_1.jpg" class="right-card" alt="Card">
      <img src="/images/cards/Red_1.jpg" class="right-card" alt="Card">
      <img src="/images/cards/Red_1.jpg" class="right-card" alt="Card">
      <img src="/images/cards/Red_1.jpg" class="right-card" alt="Card">
      <img src="/images/cards/Red_1.jpg" class="right-card" alt="Card">
      <img src="/images/cards/Red_1.jpg" class="right-card" alt="Card">
    </div>

    <!-- Discard Pile -->
    <div id="discard-pile">
      <img src="/images/cards/Green_1.jpg" class="pile-uno-card" alt="Card">
      <img src="/images/cards/Yellow_1.jpg" class="pile-uno-card" alt="Card">
      <img src="/images/cards/Blue_2.jpg" class="pile-uno-card" alt="Card">
    </div>

    <!-- UNO Button -->
    <form id="uno-form" action="/declare-uno" method="POST">
      <button type="submit" class="uno-btn">UNO!</button>
    </form>

  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>