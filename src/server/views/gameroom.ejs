<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Uno Reverse</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/gameroom.css" />
  <link rel="stylesheet" href="/css/profile.css" />
</head>
<body>
  <!-- Audio -->
  <audio autoplay loop>
    <source src="music/ziggy.mp3" type="audio/mpeg">
  </audio>

  <!-- Profile Dropdown -->
  <div class="profile-wrapper">
    <div class="profile-icon" onclick="toggleMenu()">RA</div>
    <div id="profile-menu" class="profile-menu">
      <a href="#" class="menu-item">Settings</a>
      <a href="/logout" class="menu-item logout">Logout</a>
    </div>
  </div>

  <!-- Settings Modal -->
  <div id="settingsModal" class="settings-modal">
    <div class="settings-content booklet-frame">
      <div class="settings-left">
        <img src="/images/profile-placeholder.png" alt="Profile" class="profile-pic" />
        <p><strong>Username:</strong> Nuno</p>
        <p><strong>ID:</strong> 43758722</p>
        <p><strong>Score:</strong> 16 won</p>
        <p><strong>Games Played:</strong> 54</p>
        <div class="badges">
          <span>🏅</span><span>🏅</span><span>🏅</span><span>🏅</span><span>🏅</span>
        </div>
      </div>
      <div class="settings-right">
        <h5>Bio</h5>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi a risus at lacus commodo finibus.</p>
        <button class="btn btn-outline-dark mt-3" onclick="closeSettings()">Close</button>
      </div>
    </div>
  </div>

  <!-- Game Layout -->
  <div class="game-container">
    <!-- Top Player -->
    <div class="top-row">
      <% for (let i = 0; i < 7; i++) { %>
        <img src="images/Blue_2.jpg" class="uno-card" />
      <% } %>
    </div>

    <!-- Middle Row -->
    <div class="middle-row">
      <div class="side-stack">
        <% for (let i = 0; i < 7; i++) { %>
          <img src="images/Yellow_1.jpg" class="uno-card side-rotate" />
        <% } %>
      </div>

      <div class="center-pile">
        <img src="images/Red_1.jpg" class="uno-card" />
        <img src="images/Green_1.jpg" class="uno-card" />
      </div>

      <div class="side-stack">
        <% for (let i = 0; i < 7; i++) { %>
          <img src="images/Red_1.jpg" class="uno-card side-rotate reverse" />
        <% } %>
      </div>
    </div>

    <!-- Bottom Player -->
    <div class="bottom-row">
      <% for (let i = 0; i < 7; i++) { %>
        <img src="images/Green_1.jpg" class="uno-card" />
      <% } %>
    </div>

    <!-- Game Buttons -->
    <div class="game-buttons">
      <button class="btn btn-warning me-2">Draw</button>
      <button class="btn btn-danger">UNO!</button>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    function toggleMenu() {
      const menu = document.getElementById('profile-menu');
      menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
    }

    function openSettings() {
      document.getElementById('settingsModal').style.display = 'flex';
      document.getElementById('profile-menu').style.display = 'none';
    }

    function closeSettings() {
      document.getElementById('settingsModal').style.display = 'none';
    }

    document.addEventListener('click', (e) => {
      const icon = document.querySelector('.profile-icon');
      const menu = document.getElementById('profile-menu');
      const modal = document.getElementById('settingsModal');
      if (!icon.contains(e.target) && !menu.contains(e.target)) {
        menu.style.display = 'none';
      }
    });
  </script>
</body>
</html>
